<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dp"
            android:background="@drawable/event_cover_default"
            android:id="@+id/iv_imag"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:scaleType="fitXY"
            android:layout_height="110dp" />
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="110dp">
            <TextView
                android:id="@+id/tv_title"
                android:textColor="#262525"
                android:layout_marginBottom="5dp"
                android:lines="2"
                android:textSize="18sp"
                android:maxLines="2"
                android:text="123411111111111111111111111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_baoming"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textColor="#73c15a"
                android:text="正在报名"
                android:background="@drawable/text_bg_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:textColor="#8b8787"
                    android:layout_marginBottom="5dp"
                    android:textSize="13sp"
                    android:text="1234111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#8b8787"
                    android:layout_marginBottom="5dp"
                    android:textSize="13sp"
                    android:text="0人参加"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#cfcdcd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>