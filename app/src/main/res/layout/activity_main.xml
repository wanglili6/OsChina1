<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/actionbar_background">

        </android.support.v7.widget.Toolbar>

        <!--加载对应的Fragemnt-->
        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_new"
                style="@style/main_radiobtn_style"
                android:drawableTop="@drawable/tab_icon_new"
                android:text="综合" />

            <RadioButton
                android:id="@+id/rb_tweet"
                style="@style/main_radiobtn_style"
                android:drawableTop="@drawable/tab_icon_tweet"
                android:text="动弹"

                />


            <TextView
                android:id="@+id/tv_post_tweet"
                style="@style/main_radiobtn_style"
                android:drawableTop="@drawable/tab_post_tweet"
                android:paddingTop="10dp" />


            <RadioButton
                android:id="@+id/rb_explore"
                style="@style/main_radiobtn_style"

                android:drawableTop="@drawable/tab_icon_explore"
                android:text="发现" />

            <RadioButton
                android:id="@+id/rb_me"
                style="@style/main_radiobtn_style"
                android:drawableTop="@drawable/tab_icon_me"
                android:text="我的" />


        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/main_background">

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
